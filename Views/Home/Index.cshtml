@{
    Layout = "../Shared/_Layout";
}

<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Blog!</h1>
        <p class="lead">Explore the latest blog posts created by our users.</p>

        <!-- Buttons with Bootstrap styling -->
        <div class="btn-group" role="group" aria-label="Login and Register Buttons">
            <a asp-action="Login" asp-controller="Authentication" class="btn btn-primary btn-lg" aria-label="Login">Login</a>
            <a asp-action="Register" asp-controller="Authentication" class="btn btn-primary btn-lg">Register</a>
        </div>
    </div>
</div>
